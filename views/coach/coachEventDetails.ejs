<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Details - SLAMS</title>
    <link rel="stylesheet" href="/styles/frontpage.css">
    <link rel="stylesheet" href="/styles/coachEventDetails.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
    <!-- Sidebar Menu -->
    <div id="mySidebar" class="sidebar">
        <a href="/coach/homepage" ><i class="fas fa-home"></i> Home</a>
        <a href="/coach/posts"><i class="fas fa-newspaper"></i> Posts</a>
        <a href="/coach/gallery"><i class="fas fa-image"></i> Gallery</a>
        <a href="/coach/events" class="active"><i class="fas fa-calendar-alt"></i> Events</a>
        <!-- Team link with sub-sidebar -->
        <a href="javascript:void(0);" class="team-link" onclick="toggleSubSidebar()"><i class="fas fa-users-cog"></i> Team</a>
        <div class="sub-sidebar" id="subSidebar">
            <a href="/coach/my-team"><i class="fas fa-users"></i> My Team</a>
            <a href="/coach/all-teams"><i class="fas fa-landmark"></i> All Teams</a>
        </div>
    </div>
    <!-- Sidebar toggle button -->
    <span class="sidebar-btn" onclick="toggleNav()">&#9776;</span>

    <header class="header">
        <div class="logo">
            <a href="/coach/homepage" style="text-decoration: none;">
                <img src="/images/cityYouth.jpg" alt="SLAMS Logo">
            </a>
            <span class="slams-title">SLAMS</span>
        </div>
        <div class="user-profile">
                <% if (coach && coach.coachProfile) { %>
                    <img src="<%= coach.coachProfile %>" alt="Profile" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover; border: 2px solid #fff;">
                <% } else { %>
                    <i class="fas fa-user-shield"></i>
                <% } %>
                <div class="dropdown-content">
                    <a href="/coach/profile">
                        <i class="fas fa-cogs" style="margin-right: 8px;"></i> Profile
                    </a>
                    <a href="javascript:void(0);" class="logout-btn" onclick="showLogoutModal()">
                        <i class="fas fa-sign-out-alt" style="margin-right: 8px;"></i> Log Out
                    </a>
                </div>
            </div>
    </header>

    <!-- Main Content -->
    <main class="dashboard-container">
        <div class="event-details-container">
            <div class="event-header">
                <h1 class="event-title"><%= event.title %></h1>
                <span class="event-status status-<%= event.status %>">
                    <%= event.status %>
                </span>
            </div>

            <div class="event-content">
                <div class="event-image-container">
                    <img src="<%= event.image %>" 
                        alt="<%= event.title %>" 
                        class="event-image"
                        loading="lazy" <!-- Better loading performance -->
                </div>

                <div class="event-info">
                    <div class="info-section">
                        <h3 class="info-title"><i class="fas fa-calendar-alt"></i> Date & Time</h3>
                        <p class="info-content"><%= new Date(event.date_schedule).toLocaleString() %></p>
                    </div>

                    <div class="info-section">
                        <h3 class="info-title"><i class="fas fa-map-marker-alt"></i> Location</h3>
                        <p class="info-content"><%= event.location %></p>
                    </div>

                    <div class="info-section">
                        <h3 class="info-title"><i class="fas fa-basketball-ball"></i> Sports</h3>
                        <div class="sports-list">
                            <% event.sports.split(',').forEach(sport => { 
                                const sportLower = sport.trim().toLowerCase();
                                let iconClass = 'fas fa-question-circle'; // default icon
                                
                                // Set specific icons for each sport
                                if (sportLower.includes('basketball')) {
                                    iconClass = 'fas fa-basketball-ball sport-basketball';
                                } else if (sportLower.includes('volleyball')) {
                                    iconClass = 'fas fa-volleyball-ball sport-volleyball';
                                } else if (sportLower.includes('soccer') || sportLower.includes('football')) {
                                    iconClass = 'fas fa-futbol sport-soccer';
                                } else if (sportLower.includes('badminton')) {
                                    iconClass = 'fas fa-table-tennis sport-badminton';
                                } else if (sportLower.includes('table tennis') || sportLower.includes('pingpong')) {
                                    iconClass = 'fas fa-table-tennis sport-tabletennis';
                                } else if (sportLower.includes('chess')) {
                                    iconClass = 'fas fa-chess sport-chess';
                                } else if (sportLower.includes('baseball')) {
                                    iconClass = 'fas fa-baseball-ball';
                                } else if (sportLower.includes('running') || sportLower.includes('track')) {
                                    iconClass = 'fas fa-running';
                                }
                            %>
                                <span class="sport-tag">
                                    <i class="<%= iconClass %>"></i>
                                    <%= sport.trim() %>
                                </span>
                            <% }); %>
                        </div>
                    </div>

                    <div class="info-section">
                        <h3 class="info-title"><i class="fas fa-file-pdf"></i> Appointment Form</h3>
                        <div class="pdf-container">
                            <a href="<%= event.appointmentForm %>" target="_blank" class="pdf-link">
                                <i class="fas fa-file-pdf"></i> View PDF
                            </a>
                        </div>
                    </div>
                </div>

                <div class="info-section full-width">
                    <h3 class="info-title"><i class="fas fa-align-left"></i> Description</h3>
                    <p class="info-content"><%= event.description %></p>
                </div>
            </div>

            <div class="action-buttons">
                <a href="/coach/events" class="btn btn-back">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                <% if (hasRegisteredTeam) { %>
                    <button class="btn btn-register" disabled style="background-color: #4CAF50; cursor: not-allowed;">
                        <i class="fas fa-check-circle"></i> Registered
                    </button>
                <% } else if (coachStatus === 'confirmed') { %>
                    <a href="/coach/register/<%= event.id %>" class="btn btn-register">
                        <i class="fas fa-user-plus"></i> Register
                    </a>
                <% } else { %>
                    <button class="btn btn-register" disabled style="background-color: #ccc; cursor: not-allowed;">
                        <i class="fas fa-user-plus"></i> Register (Not Verified)
                    </button>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Modal for logout confirmation -->
    <div id="logoutModal" class="modal">
        <div class="modal-content">
            <h3>Are you sure you want to log out?</h3>
            <button id="confirmLogout" class="confirm-btn">Confirm</button>
            <button id="cancelLogout" class="cancel-btn">Cancel</button>
        </div>
    </div>

    <script>
        let isSidebarOpen = false; 

        function toggleNav() {
            const sidebar = document.getElementById("mySidebar");
            const content = document.querySelector(".dashboard-container");
            const sidebarBtn = document.querySelector(".sidebar-btn");

            if (isSidebarOpen) {
                sidebar.style.left = "-240px";  
                content.style.marginLeft = "0"; 
                sidebarBtn.innerHTML = "&#9776;"; 
            } else {
                sidebar.style.left = "0";  
                content.style.marginLeft = "240px";  
                sidebarBtn.innerHTML = "&#9776;"; 
            }
            isSidebarOpen = !isSidebarOpen;  
        }

        // Toggle the team dropdown
        const teamDropdownBtn = document.querySelector('.team-link');
        const teamDropdownContent = document.getElementById('subSidebar');

        function toggleSubSidebar() {
            if (teamDropdownContent.style.display === "block") {
                teamDropdownContent.style.display = "none";
                teamDropdownBtn.classList.remove("active");
            } else {
                teamDropdownContent.style.display = "block";
                teamDropdownBtn.classList.add("active");
            }
        }

        // Show the logout confirmation modal
        function showLogoutModal() {
            document.getElementById('logoutModal').style.display = 'block';
        }

        function hideLogoutModal() {
            document.getElementById('logoutModal').style.display = 'none';
        }

        document.getElementById('confirmLogout').addEventListener('click', function() {
            window.location.href = '/coach/logout';  
        });

        document.getElementById('cancelLogout').addEventListener('click', function() {
            hideLogoutModal(); 
        });

        // User profile dropdown
        const userProfile = document.querySelector('.user-profile');
        const dropdown = document.querySelector('.dropdown-content');
        let hideTimeout;

        if (userProfile && dropdown) {
            userProfile.addEventListener('mouseenter', () => {
                clearTimeout(hideTimeout);
                dropdown.classList.add('show');
            });

            userProfile.addEventListener('mouseleave', () => {
                hideTimeout = setTimeout(() => {
                    dropdown.classList.remove('show');
                }, 1500);
            });
        }
    </script>
</body>

</html>
