:root {
    --primary-color: #3f0808;
    --secondary-color: #FFFFFF;
    --accent-color: #FFD700;
    --text-color: #000000;
    --light-gray: #F5F5F5;
    --dark-red: #621616;
    --hover-color: #a32600;
    --active-color: #581000;
}

.dashboard-container {
    margin: 0;
    padding: 15px;
    width: 100%;
    min-height: calc(100vh - 72px);
}

.create-event-form {
    background-color: var(--secondary-color);
    padding: 20px;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    width: 100%;
    margin: 0 auto;
}

.create-event-form h1 {
    margin-bottom: 20px;
    color: var(--primary-color);
    font-size: 1.8rem;
    text-align: center;
    border-bottom: 2px solid #e0e0e0;
    padding-bottom: 10px;
}

.form-group {
    margin-bottom: 15px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    font-size: 16px;
    color: var(--primary-color);
    font-weight: 600;
}

.form-group input, 
.form-group textarea, 
.form-group select {
    width: 100%;
    padding: 10px;
    font-size: 15px;
    border: 1px solid #DDD;
    border-radius: 6px;
    transition: all 0.3s ease;
    background-color: var(--secondary-color);
}

.form-group input:focus, 
.form-group textarea:focus, 
.form-group select:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(139, 0, 57, 0.2);
    outline: none;
}

.form-group input[type="file"] {
    padding: 8px;
    background-color: transparent;
}

.form-group button {
    background-color: var(--primary-color);
    color: white;
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 6px;
    border: none;
    cursor: pointer;
    width: auto;
    min-width: 120px;
    transition: all 0.3s ease;
    margin-top: 0;
}

.form-group button:hover {
    background-color: var(--hover-color);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.form-buttons {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 30px;
    width: 100%;
    gap: 15px;
}

.submit-btn {
    background-color: var(--primary-color);
    color: white;
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 6px;
    border: none;
    cursor: pointer;
    width: auto;
    min-width: 140px;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}

.submit-btn:hover {
    background-color: var(--hover-color);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.back-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background-color: var(--primary-color);
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-size: 16px;
    font-weight: 600;
    transition: all 0.3s ease;
    width: auto;
    min-width: 140px;
    gap: 8px;
}

.back-btn:hover {
    background-color: var(--hover-color);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.form-group label i {
    margin-right: 8px;
    color: var(--primary-color);
}

.sports-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 10px;
    margin-top: 10px;
    background-color: var(--light-gray);
    padding: 10px;
    border-radius: 8px;
}

.sport-option {
    display: flex;
    align-items: center;
    padding: 8px;
    margin: 0;
    background-color: var(--secondary-color);
    border-radius: 6px;
    transition: all 0.2s ease;
    min-height: 40px;
    height: auto;
    position: relative;
    overflow: visible;
}

.sport-option:hover {
    background-color: #F9E6E6;
}

.sport-option input[type="checkbox"] {
    margin-right: 1px;
    margin-left: -50px;
    accent-color: var(--primary-color);
    transform: scale(1.1);
    position: relative;
    z-index: 1;
    flex-shrink: 0;
}

.sport-option label {
    margin-top: 10px;
    margin-left: -50px;
    color: var(--text-color);
    font-weight: normal;
    cursor: pointer;
    flex: 1;
    font-size: 14px;
    line-height: 1.3;
    display: block;
    position: relative;
    z-index: 1;
    overflow: visible;
    white-space: normal;
    word-wrap: break-word;
}

.form-group textarea {
    min-height: 120px;
    resize: vertical;
    font-family: inherit;
    line-height: 1.5;
    padding: 12px;
}

/* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 3000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    padding-top: 100px;
    animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.modal-content {
    background-color: #fff;
    margin: 0 auto;
    padding: 30px;
    border-radius: 10px;
    width: 90%;
    max-width: 400px;
    text-align: center;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    animation: scaleIn 0.3s ease-in-out;
    position: relative;
}

@keyframes scaleIn {
    from { transform: scale(0.9); }
    to { transform: scale(1); }
}

.modal-content h3 {
    font-size: 22px;
    color: #333;
    margin-bottom: 20px;
    font-weight: 600;
}

.modal-buttons {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 20px;
}

.confirm-btn, .cancel-btn {
    padding: 12px 25px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    border-radius: 6px;
    border: none;
    transition: all 0.3s;
    min-width: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.confirm-btn {
    background-color: #4CAF50;
    color: #fff;
}

.cancel-btn {
    background-color: #f44336;
    color: #fff;
}

.confirm-btn:hover {
    background-color: #45a049;
    transform: translateY(-2px);
}

.cancel-btn:hover {
    background-color: #e53935;
    transform: translateY(-2px);
}

.close-btn {
    position: absolute;
    top: 15px;
    right: 15px;
    font-size: 24px;
    color: #999;
    background: none;
    border: none;
    cursor: pointer;
}

.close-btn:hover {
    color: #333;
}

/* Responsive adjustments */
@media (max-width: 1024px) {
.sport-option input[type="checkbox"] {
    margin-left: -50px;
}

    .sports-container {
        grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
        gap: 8px;
    }
    
    .sport-option {
        padding: 6px;
        min-height: 36px;
    }
    
    .sport-option label {
        font-size: 13px;
    }
}

@media (max-width: 767px) {
    .dashboard-container {
        padding: 10px;
    }
    
    .create-event-form {
        padding: 15px;
    }
    
    .sports-container {
        grid-template-columns: repeat(auto-fill, minmax(110px, 1fr));
        gap: 6px;
        padding: 8px;
    }
    
    .sport-option {
        padding: 5px;
        min-height: 32px;
    }
    
    .sport-option input[type="checkbox"] {
    margin-left: -45px;
}
    .sport-option label {
        font-size: 14px;
    }
    
    .sport-option input {
        margin-right: 6px;
        transform: scale(1);
    }
    
    .header .logo img {
        width: 50px;
    }
    
    .form-buttons {
        flex-direction: row-reverse; /* This will reverse the order for mobile */
        justify-content: flex-start; /* Align items to the left */
        gap: 10px;
    }
    
    .submit-btn, .back-btn {
        width: auto;
        min-width: 120px;
        font-size: 14px;
        padding: 10px 15px;
    }
}

@media (max-width: 480px) {
    .sports-container {
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    }
    
    .sport-option label {
        margin-left: -40px;
        font-size: 13px;
    }
    
    .create-event-form h2 {
        font-size: 1.5rem;
    }
    
    .header .logo img {
        width: 40px;
    }
    
    .header {
        padding: 3px 15px;
    }
    
    .form-buttons {
        gap: 10px;
    }
    
    .form-group button, .back-btn {
        padding: 10px 15px;
        font-size: 10px;
    }
}
</style>
