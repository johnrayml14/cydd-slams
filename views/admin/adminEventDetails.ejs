<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Details - SLAMS</title>
    <link rel="stylesheet" href="/styles/adminHome.css">
    <link rel="stylesheet" href="/styles/adminDashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            color: #fff;
            background: linear-gradient(135deg, #ffffff, #c6d6d8);
            line-height: 1.6;
            color: #fff;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            padding: 0 20px;
            margin: 0 auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: center;
        }

        .header {
            background-color: #8B0039;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 3px 30px;
            width: 100%;
            position: fixed;
            top: 0;
            z-index: 1000;
        }

        .header .logo {
            margin-left: 20px;
            display: flex;
            align-items: center;
            font-family: 'Playfair Display', serif;
            gap: 12px;
        }

        .header .logo img {
            width: 60px;
            height: auto;
            border-radius: 50%;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .slams-title {
            font-size: 24px;
            font-weight: bold;
            font-family: 'Poppins', sans-serif;
            color: #FFD700;
            letter-spacing: 1px;
        }

        .user-profile {
            position: relative;
            cursor: pointer;
        }

        .user-profile img, .user-profile i {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            border: 2px solid #007bff;
            object-fit: cover;
        }

        /* Sidebar Styles */
        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            top: 72px;
            left: -240px;
            background-color: #ffffff;
            z-index: 999;
            padding-top: 20px;
            transition: all 0.3s ease;
            box-shadow: 2px 0px 10px rgba(0, 0, 0, 0.2);
            overflow-y: auto;
        }

        .sidebar a {
            padding: 16px 24px;
            text-decoration: none;
            color: rgb(46, 0, 0);
            font-size: 18px;
            display: block;
            transition: all 0.3s ease;
            border-bottom: 1px solid #000000;
        }

        .sidebar a i {
            margin-right: 15px;
        }

        .sidebar a:hover {
            background-color: #a32600;
            padding-left: 32px;
            color: white;
        }

        .sidebar a.active {
            background-color: #581000;
            color: #fff;
            padding-left: 32px;
        }

        .sidebar-btn {
            font-size: 15px;
            color: white;
            background-color: #8B0039;
            padding: 5px;
            padding-left: 10px;
            padding-right: 10px;
            cursor: pointer;
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1001;
            border-radius: 5px;
            transition: transform 0.3s ease;
        }

        .sidebar-btn:hover {
            transform: scale(1.1);
            background-color: #8B0039;
        }

        /* Team dropdown styles */
        .team-dropdown-btn {
            padding: 16px 24px;
            text-decoration: none;
            color: rgb(46, 0, 0);
            font-size: 18px;
            display: block;
            cursor: pointer;
            background-color: #ffffff;
            border-bottom: 1px solid #000000;
            transition: all 0.3s ease;
        }

        .team-dropdown-btn:hover {
            background-color: #a32600;
            padding-left: 32px;
            color: white;
        }

        .team-dropdown-content {
            display: none;
            background-color: #f4f4f4;
            padding-left: 20px;
            border-left: 3px solid #3498db;
        }

        .team-dropdown-content a {
            padding: 8px 15px;
            text-decoration: none;
            font-size: 16px;
            color: #333;
            display: block;
            border-bottom: 1px solid #000000;
        }

        .team-dropdown-content a:hover {
            background-color: #a32600;
            color: white;
        }

        .team-dropdown-btn.active+.team-dropdown-content {
            display: block;
        }

        /* Dropdown Content */
        .dropdown-content {
            position: absolute;
            right: 0;
            top: 50px;
            background-color: #621616;
            color: #fff;
            min-width: 180px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.5);
            border-radius: 0;
            padding: 15px;
            z-index: 104;
            border: 1px solid #ffcc00;
            display: none;
        }

        .dropdown-content a {
            padding: 10px 15px;
            text-decoration: none;
            color: #fff;
            display: flex;
            align-items: center;
            font-size: 14px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .dropdown-content a i {
            margin-right: 10px;
            width: 16px;
            text-align: center;
        }

        .dropdown-content a:hover {
            background-color: #9a1b1b;
            transform: translateX(5px);
        }

        .logout-btn {
            background-color: rgb(236, 26, 26);
            padding: 5px 15px;
            margin-left: 5px;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            margin-top: 8px;
            transition: background-color 0.3s ease;
        }

        .logout-btn:hover {
            background-color: #E64A19;
        }

        /* Dashboard Container */
        .dashboard-container {
            padding: 40px;
            padding-top: 90px;
            transition: padding-left 0.3s ease;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            width: 100%;
            margin-left: 0;
        }

        /* Event Details Styles */
        :root {
            --primary-color: #4b1515;
            --secondary-color: #FFFFFF;
            --accent-color: #9c4d4d;
            --text-color: #333333;
            --light-gray: #F5F5F5;
            --border-color: #E0E0E0;
        }

        .event-details-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            background-color: var(--secondary-color);
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .event-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid var(--border-color);
        }

        .event-title {
            font-size: 2rem;
            color: var(--primary-color);
            margin: 0;
        }

        .event-status {
            padding: 6px 12px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
        }

        .status-ongoing {
            background-color: #E3F2FD;
            color: #1976D2;
        }

        .status-expired {
            background-color: #FFEBEE;
            color: #D32F2F;
        }

        .event-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            align-items: start;
        }

        .event-image-container {
            position: relative;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 100%; 
            height: auto; 
            max-width: 600px; 
            margin: 0 auto 20px; 
            background-color: #FFFFFF;
            display: inline-block; 
        }

        .event-image {
            width: 100%;
            height: auto; 
            display: block;
            transition: transform 0.3s ease;
            object-fit: contain;
            object-position: center;
            image-rendering: optimizeQuality;
            -webkit-transform: translateZ(0);
            backface-visibility: hidden;
        }

        .event-image:hover {
            transform: scale(1.02);
        }

        .event-info {
            display: flex;
            flex-direction: column;
        }

        .info-section {
            margin-bottom: 25px;
        }

        .info-title {
            font-size: 1.1rem;
            color: var(--primary-color);
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

        .info-title i {
            margin-right: 10px;
            color: var(--accent-color);
        }

        .info-content {
            font-size: 1rem;
            line-height: 1.6;
            color: var(--text-color);
        }

        /* Enhanced Sports List Styling */
        .sports-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
        }

        .sport-tag {
            background-color: var(--light-gray);
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .sport-tag:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
            background-color: #e6d5e7;
        }

        .sport-tag i {
            margin-right: 8px;
            font-size: 0.9rem;
        }

        /* Sport-specific icons and colors */
        .sport-basketball {
            color: #FF6B00;
        }
        
        .sport-volleyball {
            color: #1E88E5;
        }
        
        .sport-soccer {
            color: #43A047;
        }
        
        .sport-badminton {
            color: #8E24AA;
        }
        
        .sport-tabletennis {
            color: #E53935;
        }
        
        .sport-chess {
            color: #5D4037;
        }

        .pdf-container {
            margin-top: 15px;
        }

        .pdf-link {
            display: inline-flex;
            align-items: center;
            padding: 8px 15px;
            background-color: var(--light-gray);
            border-radius: 5px;
            color: #D32F2F;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .pdf-link:hover {
            background-color: #FFEBEE;
            transform: translateY(-2px);
        }

        .pdf-link i {
            margin-right: 8px;
            font-size: 1.2rem;
        }

        .action-buttons {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid var(--border-color);
        }

        .btn {
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
        }

        .btn i {
            margin-right: 8px;
        }

        .btn-edit {
            background-color: var(--primary-color);
            color: white;
        }

        .btn-edit:hover {
            background-color: var(--accent-color);
            transform: translateY(-2px);
        }

        .btn-back {
            background-color: var(--light-gray);
            color: var(--text-color);
        }

        .btn-back:hover {
            background-color: #E0E0E0;
            transform: translateY(-2px);
        }

        /* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 3000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    padding-top: 100px;
    animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.modal-content {
    background-color: #fff;
    margin: 0 auto;
    padding: 30px;
    border-radius: 10px;
    width: 90%;
    max-width: 400px;
    text-align: center;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    animation: scaleIn 0.3s ease-in-out;
    position: relative;
}

@keyframes scaleIn {
    from {
        transform: scale(0.9);
    }

    to {
        transform: scale(1);
    }
}

.modal-content h3 {
    font-size: 22px;
    color: #333;
    margin-bottom: 20px;
    font-weight: 600;
}

.modal-buttons {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 20px;
}

.confirm-btn,
.cancel-btn {
    padding: 12px 25px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    border-radius: 6px;
    border: none;
    transition: all 0.3s;
    min-width: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.confirm-btn {
    background-color: #4CAF50;
    color: #fff;
}

.cancel-btn {
    background-color: #f44336;
    color: #fff;
}

.confirm-btn:hover {
    background-color: #45a049;
    transform: translateY(-2px);
}

.cancel-btn:hover {
    background-color: #e53935;
    transform: translateY(-2px);
}

.close-btn {
    position: absolute;
    top: 15px;
    right: 15px;
    font-size: 24px;
    color: #999;
    background: none;
    border: none;
    cursor: pointer;
}

.close-btn:hover {
    color: #333;
}

        /* Responsive Design */
        /* Tablet: 768px - 1024px */
        @media (max-width: 1024px) {
            .container {
                padding: 0 15px;
            }

            .header {
                padding: 2px 20px;
            }

            .header .logo img {
                margin-left: 20px;
                width: 45px;
            }

            .slams-title {
                font-size: 18px;
            }

            .sidebar {
                top: 70px;
                width: 200px;
                left: -200px;
            }

            .sidebar a {
                font-size: 16px;
                padding: 14px 20px;
            }

            .dashboard-container {
                padding: 15px;
                padding-top: 80px;
            }

            .sidebar-btn {
                left: 15px;
                top: 15px;
            }

            .event-content {
                grid-template-columns: 1fr;
            }
            
            .event-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }
            
            .action-buttons {
                justify-content: center;
            }
            
            .event-image-container {
                min-height: 250px;
            }
        }

        /* Mobile: 350px - 767px */
        @media (max-width: 767px) {
            .header {
                padding: 8px 15px;
                height: 60px;
            }

            .logo img {
                width: 80px;
                margin-left: 40px;
            }

            .sidebar {
                top: 60px;
                width: 220px;
                left: -220px;
                padding-top: 10px;
            }

            .sidebar a {
                font-size: 16px;
                padding: 16px 20px;
                min-height: 50px;
            }

            .sidebar a i {
                margin-right: 12px;
                width: 20px;
                text-align: center;
            }

            .sidebar-btn {
                left: 10px;
                top: 13px;
                font-size: 18px;
                padding: 8px 12px;
                min-width: 44px;
                min-height: 44px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .dashboard-container {
                padding: 20px;
                padding-top: 80px;
            }

            .event-details-container {
                padding: 15px;
            }

            .event-title {
                font-size: 1.5rem;
            }

            .modal-content {
                width: 90%;
                max-width: 300px;
                padding: 20px;
            }

            .confirm-btn, .cancel-btn {
                padding: 10px 15px;
                font-size: 14px;
                width: 100px;
            }
        }

        /* Small mobile optimization */
        @media (max-width: 400px) {
            .logo img {
                width: 70px;
                margin-left: 35px;
            }

            .sidebar {
                width: 200px;
            }

            .sidebar a {
                font-size: 15px;
                padding: 14px 15px;
            }

            .confirm-btn, .cancel-btn {
                padding: 10px 12px;
                font-size: 13px;
                width: 90px;
            }

            .action-buttons {
                flex-direction: column;
            }
            
            .btn {
                width: 100%;
                margin-bottom: 10px;
            }
        }

        /* For high-resolution displays */
        @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) { 
            .event-image {
                image-rendering: -webkit-optimize-contrast;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar Menu -->
    <div id="mySidebar" class="sidebar">
        <a href="/admin/home"><i class="fas fa-home"></i> Home</a>
        <a href="/admin/posts"><i class="fas fa-newspaper"></i> Posts</a>
        <a href="/admin/events" class="active"><i class="fas fa-calendar-alt"></i> Events</a>
        <a href="/admin/coach"><i class="fas fa-chalkboard-teacher"></i> Coordinator Request</a>
        <!-- Team dropdown section -->
        <a href="javascript:void(0);" class="team-dropdown-btn"><i class="fas fa-users-cog"></i> Teams</a>
        <div class="team-dropdown-content">
            <a href="/admin/team-request"><i class="fas fa-users"></i> Team Request</a>
        <a href="/admin/registered-team"><i class="fas fa-landmark"></i> All Team</a>
        </div>
        <a href="/admin/users"><i class="fas fa-users"></i> Players</a>
    </div>

    <!-- Sidebar toggle button -->
    <span class="sidebar-btn" onclick="toggleNav()">&#9776;</span>

    <header class="header">
        <div class="logo">
            <a href="/admin/home" style="text-decoration: none;">
                <img src="/images/cityYouth.jpg" alt="SLAMS Logo">
            </a>
        </div>
        <div class="user-profile">
            <% if (admin && admin.profilePic) { %>
                <img src="<%= admin.profilePic %>" 
                    alt="Admin Profile" 
                    style="width: 35px; height: 35px; border-radius: 50%; border: 2px solid #007bff; object-fit: cover;">
            <% } else { %>
                <i class="fas fa-user-shield"></i>
            <% } %>

            <div class="dropdown-content">
                <a href="/admin/adminProfile">
                    <i class="fas fa-cogs" style="margin-right: 8px;"></i> Admin
                </a>
                <a href="javascript:void(0);" class="logout-btn" onclick="showLogoutModal()">
                    <i class="fas fa-sign-out-alt" style="margin-right: 8px;"></i> Log Out
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="dashboard-container">
        <div class="event-details-container">
            <div class="event-header">
                <h1 class="event-title"><%= event.title %></h1>
                <span class="event-status status-<%= event.status %>">
                    <%= event.status %>
                </span>
            </div>

            <div class="event-content">
                <div class="event-image-container">
                    <img src="<%= event.image %>" 
                         alt="<%= event.title %>" 
                         class="event-image"
                         loading="eager"
                         decoding="async"
                         onerror="this.onerror=null;this.src='/images/default-event.jpg'">
                </div>

                <div class="event-info">
                    <div class="info-section">
                        <h3 class="info-title"><i class="fas fa-calendar-alt"></i> Date & Time</h3>
                        <p class="info-content"><%= event.formattedDate %></p>
                    </div>

                    <div class="info-section">
                        <h3 class="info-title"><i class="fas fa-map-marker-alt"></i> Location</h3>
                        <p class="info-content"><%= event.location %></p>
                    </div>

                    <div class="info-section">
                        <h3 class="info-title"><i class="fas fa-basketball-ball"></i> Sports</h3>
                        <div class="sports-list">
                            <% event.sports.split(',').forEach(sport => { 
                                const sportLower = sport.trim().toLowerCase();
                                let iconClass = 'fas fa-question-circle';
                                
                                if (sportLower.includes('basketball')) {
                                    iconClass = 'fas fa-basketball-ball sport-basketball';
                                } else if (sportLower.includes('volleyball')) {
                                    iconClass = 'fas fa-volleyball-ball sport-volleyball';
                                } else if (sportLower.includes('soccer') || sportLower.includes('football')) {
                                    iconClass = 'fas fa-futbol sport-soccer';
                                } else if (sportLower.includes('badminton')) {
                                    iconClass = 'fas fa-table-tennis sport-badminton';
                                } else if (sportLower.includes('table tennis') || sportLower.includes('pingpong')) {
                                    iconClass = 'fas fa-table-tennis sport-tabletennis';
                                } else if (sportLower.includes('chess')) {
                                    iconClass = 'fas fa-chess sport-chess';
                                } else if (sportLower.includes('baseball')) {
                                    iconClass = 'fas fa-baseball-ball';
                                } else if (sportLower.includes('running') || sportLower.includes('track')) {
                                    iconClass = 'fas fa-running';
                                }
                            %>
                                <span class="sport-tag">
                                    <i class="<%= iconClass %>"></i>
                                    <%= sport.trim() %>
                                </span>
                            <% }); %>
                        </div>
                    </div>

                    <div class="info-section">
                        <h3 class="info-title"><i class="fas fa-file-pdf"></i> Appointment Form</h3>
                        <div class="pdf-container">
                            <a href="<%= event.appointmentForm %>" target="_blank" class="pdf-link">
                                <i class="fas fa-file-pdf"></i> View PDF
                            </a>
                        </div>
                    </div>
                </div>

                <div class="info-section full-width">
                    <h3 class="info-title"><i class="fas fa-align-left"></i> Description</h3>
                    <p class="info-content"><%= event.description %></p>
                </div>
            </div>

            <div class="action-buttons">
                <a href="/admin/events" class="btn btn-back">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                <a href="/admin/events/edit/<%= event.id %>" class="btn btn-edit">
                    <i class="fas fa-edit"></i> Edit Event
                </a>
            </div>
        </div>
    </main>

    <!-- Modal for logout confirmation -->
    <div id="logoutModal" class="modal">
        <div class="modal-content">
            <h3>Are you sure you want to log out?</h3>
            <button id="confirmLogout" class="confirm-btn">Yes</button>
            <button id="cancelLogout" class="cancel-btn">No</button>
        </div>
    </div>

    <script>
        let isSidebarOpen = false; 

        function toggleNav() {
            const sidebar = document.getElementById("mySidebar");
            const content = document.querySelector(".dashboard-container");
            const sidebarBtn = document.querySelector(".sidebar-btn");

            if (isSidebarOpen) {
                sidebar.style.left = "-240px";  
                document.body.classList.remove("sidebar-open");
                sidebarBtn.innerHTML = "&#9776;";
            } else {
                sidebar.style.left = "0";
                document.body.classList.add("sidebar-open");
                sidebarBtn.innerHTML = "&#9776;";
            }

            isSidebarOpen = !isSidebarOpen;
        }

        // Toggle the team dropdown
        const teamDropdownBtn = document.querySelector('.team-dropdown-btn');
        const teamDropdownContent = document.querySelector('.team-dropdown-content');

