        </div>
        
        <form action="/accept-terms" method="POST" class="terms-actions">
            <button type="button" class="btn btn-decline" onclick="window.location.href='/logout'">
                <i class="fas fa-times"></i> Decline
            </button>
            <button type="submit" class="btn btn-accept">
                <i class="fas fa-check"></i> Accept Terms
